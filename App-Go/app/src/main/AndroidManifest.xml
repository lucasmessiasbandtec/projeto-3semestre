<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_go">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppGo"
        android:usesCleartextTraffic="true">
        <activity android:name=".screens.PostMapScreen"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".screens.Post_tripSelector" />
        <activity android:name=".screens.LastTripScreen" />
        <activity android:name=".screens.ProfileScreen" />
        <activity android:name=".screens.CreateTripScreen" />
        <activity android:name=".screens.ItinerarioScreen" />
        <activity android:name=".screens.PostScreen" />
        <activity android:name=".screens.HomeScreen" />
        <activity android:name=".screens.SignUpScreen" />
        <activity android:name=".screens.LoginScreen" />
        <activity android:name=".screens.ViewPlaceScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>