<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_last">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintBottom_toTopOf="@id/btn_map_trip_last"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_partida"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Santos"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="@id/iv_location"
            app:layout_constraintBottom_toTopOf="@id/btn_map_trip_last"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_destino"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Santos"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="@id/iv_location"
            app:layout_constraintBottom_toTopOf="@id/btn_map_trip_last"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_map_trip_last"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:text="@string/ver_o_mapa"
            android:textColor="@color/white"
            android:backgroundTint="#2C73DD"
            android:textSize="18sp"
            android:background="@drawable/round_shape"
            app:layout_constraintBottom_toTopOf="@+id/ib_postar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_postar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/postar"
            app:layout_constraintTop_toBottomOf="@id/btn_map_trip_last"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:onClick="post_last"/>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/ib_postar"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#b3b3b3"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>